{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["ESNext", "DOM"],
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "strict": true,

        /*
         * This should be true until issue are fixed
         * https://github.com/microsoft/TypeScript-DOM-lib-generator/issues/1368
         */
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
